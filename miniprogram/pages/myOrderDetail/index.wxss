page {
  height: 100vh;
  background-color: #f8f8f8;
}
page .common {
  display: flex;
  flex-direction: column;
}
page .head {
  display: flex;
  align-items: center;
}
page .head .iconfont {
  font-size: 55rpx;
  color: #23aaf2;
}
page .head .icon-order-detail {
  font-size: 50rpx;
}
page .head .title {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
}
page .outer {
  display: flex;
  flex-direction: column;
  width: 700rpx;
  margin-top: 48rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  padding: 32rpx 62rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 30rpx;
  box-shadow: 0px 0px 6px 0px #dcecf5;
  font-size: 26rpx;
}
page .order-status {
  flex-direction: row;
  align-items: center;
  margin-top: 28rpx;
  font-size: 30rpx;
}
page .order-status .status {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #23aaf2;
}
page .delievry-info .deliveryman {
  margin: 20rpx 0 18rpx;
}
page .delievry-info .num-common {
  margin: 0 0 18rpx;
}
page .delievry-info .null-delievry {
  margin-top: 6rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
}
page .detail-warp .content-byself .take-food-num {
  display: flex;
  align-items: center;
  margin-bottom: 2rpx;
}
page .detail-warp .content-byself .take-food-num .num {
  font-size: 48rpx;
  color: #ff824e;
}
page .detail-warp .margin-common {
  margin-bottom: 24rpx;
}
page .detail-warp .line {
  width: 110%;
  height: 2rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  background-color: #e7e7e7;
}
page .detail-warp .remarks {
  margin-top: 18rpx;
  font-size: 28rpx;
}
.confirm-btn {
  width: 228rpx;
  height: 68rpx;
  margin-top: 74rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;
  background-color: #ff824e;
  text-align: center;
  line-height: 68rpx;
  font-size: 32rpx;
  color: #fff;
}
