.stu-login-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  margin-left: 530rpx;
  width: 186rpx;
  height: 68rpx;
  background-color: #fff;
  opacity: 0.88;
  border-radius: 98px;
  color: #5d9ff7;
  font-size: 28rpx;
  font-weight: 500;
  font-family: Arial;
}
.bgc {
  position: absolute;
  width: 100vw;
  height: 100vh;
  margin-top: -24rpx;
  z-index: -1;
}
.logo {
  width: 274rpx;
  height: 274rpx;
  margin-top: 46rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}
.login-warp {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 196rpx;
}
.login-warp .account-warp {
  display: flex;
  border: 2rpx solid #e6e6e6;
}
.login-warp .password-warp {
  position: relative;
  top: 30rpx;
  display: flex;
  border-bottom: 2rpx solid #e6e6e6;
}
.login-warp .password-warp .icon-gongkai {
  position: absolute;
  left: 540rpx;
  display: flex;
  align-items: center;
  height: 100%;
  z-index: 99;
  font-size: 56rpx;
  color: #747373;
}
.login-warp .password-warp .visible {
  color: #ff824e;
}
.login-warp common-input {
  width: 100%;
  height: 100%;
  padding-left: 80rpx;
  box-sizing: border-box;
  border-radius: 0 98rpx 98rpx 0;
  font-size: 24rpx;
}
.login-warp .common {
  display: flex;
  align-items: center;
  width: 630rpx;
  height: 120rpx;
  border-radius: 98rpx;
  background-color: #fff;
  opacity: 0.88;
}
.login-warp .common .icon {
  margin-left: 46rpx;
  font-size: 56rpx;
  color: #7f7d7d;
}
.login-warp .placeholder-class {
  padding-left: -90rpx;
  color: #aba8a8;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.login-warp .login-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 630rpx;
  height: 120rpx;
  margin-top: 80rpx;
  background-color: #ff824e;
  border-radius: 98rpx;
  box-shadow: 0px 1px 6px 0px #ff824e;
  font-family: Microsoft Yahei;
  color: #ffffff;
  font-size: 40rpx;
}
.login-warp .agreement-warp {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 56rpx;
  margin-top: 5rpx;
  color: #ffffff;
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.login-warp .agreement-warp .checkbox {
  transform: scale(0.6, 0.6);
}
.mask {
  position: absolute;
  top: 0;
  z-index: 99;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  opacity: 0.4;
}
.agreement-content {
  position: fixed;
  top: 40rpx;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  width: 80vw;
  height: 90vh;
  padding: 0 40rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #fff;
}
.agreement-content .title {
  width: 100%;
  margin-top: 30rpx;
  text-align: center;
  font-weight: 700;
}
.agreement-content .content {
  margin-bottom: 40rpx;
  font-size: 26rpx;
}
.agreement-content .content .text-strong {
  font-weight: 700;
}
.agreement-content .confirm-btn {
  height: 40rpx;
  padding: 10rpx 0;
  margin-bottom: 40rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  border-radius: 15rpx;
  box-shadow: 2rpx 1rpx 3rpx 2rpx #f88959;
  background-color: #ff824e;
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #fff;
}
