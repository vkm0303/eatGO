page {
  height: 100vh;
  background-color: #f8f8f8;
}
.time-selector-warp-1 {
  width: 100vw;
  padding: 28rpx 24rpx 0;
  box-sizing: border-box;
  white-space: nowrap;
}
.time-selector-warp-1 .time-selector-box {
  display: inline-block;
  width: 228rpx;
  height: 126rpx;
  margin-right: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.08);
  background-color: #fff;
  font-size: 16rpx;
}
.time-selector-warp-1 .time-selector-box .time-warp {
  display: flex;
  justify-content: center;
  margin-top: 14rpx;
}
.time-selector-warp-1 .time-selector-box .time-warp .time {
  width: 126rpx;
  margin-right: 6rpx;
  font-size: 40rpx;
  font-weight: 700;
}
.time-selector-warp-1 .time-selector-box .time-warp .title {
  width: 40rpx;
  word-wrap: break-word;
  white-space: normal;
  word-break: break-all;
}
.time-selector-warp-1 .time-selector-box .status {
  margin: 5rpx 0 8rpx;
  text-align: center;
}
.time-selector-warp-1 .time-selector-box .deadline {
  text-align: center;
}
.address-warp-1 {
  width: 700rpx;
  height: 80rpx;
  padding-top: 20rpx;
  padding-left: 26rpx;
  margin: 40rpx 0 40rpx 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  border-radius: 16rpx;
  box-shadow: 0px 0px 6px 0px #dcecf5;
  background-color: #fff;
  font-size: 28rpx;
  color: #545151;
}
.address-warp-1 .iconfont {
  margin-right: 16rpx;
  color: #ff824e;
}
.time-selector-warp-2 {
  display: flex;
  align-items: center;
  padding-top: 40rpx;
  padding-left: 24rpx;
}
.time-selector-warp-2 .selector-box {
  width: 220rpx;
  height: 126rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.08);
  text-align: center;
  line-height: 126rpx;
  font-size: 28rpx;
  color: #6f6e6e;
}
.time-selector-warp-2 .time-picker {
  display: flex;
  font-weight: 500;
}
.time-selector-warp-2 .time-picker .separator {
  width: 28rpx;
  text-align: center;
  line-height: 68rpx;
}
.time-selector-warp-2 .time-picker .time {
  width: 68rpx;
  height: 68rpx;
  border: 2rpx solid #bbbbbb;
  border-radius: 8rpx;
  text-align: center;
  line-height: 68rpx;
}
.time-selector-warp-2 .active {
  border: 4rpx solid #ff824e;
  color: #ff824e;
}
.address-warp-2 {
  display: flex;
  align-items: center;
  margin: 44rpx 24rpx;
}
.address-warp-2 .address-detail-warp {
  display: flex;
  flex-direction: column;
  width: 320rpx;
  height: 100%;
  margin-left: 70rpx;
}
.address-warp-2 .address-detail-warp .address-detail {
  padding: 5rpx 0 0 10rpx;
  margin-bottom: 3rpx;
}
.order-detail-warp {
  width: 700rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  border-radius: 30rpx;
  box-shadow: 0px 0px 6px 0px #dcecf5;
  background-color: #ffffff;
  line-height: 40rpx;
}
.order-detail-warp .food-list {
  width: 624rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  padding-top: 44rpx;
  box-sizing: border-box;
  border-bottom: 3rpx solid #bbbbbb;
}
.order-detail-warp .food-list .food {
  display: flex;
  margin-bottom: 50rpx;
}
.order-detail-warp .food-list .food .food-img {
  width: 148rpx;
  height: 136rpx;
  border-radius: 20rpx;
}
.order-detail-warp .food-list .food .right {
  display: flex;
  width: 76%;
}
.order-detail-warp .food-list .food .right .food-name {
  flex: 3;
  margin-left: 36rpx;
  margin-top: 10rpx;
  font-size: 36rpx;
}
.order-detail-warp .food-list .food .right .price-num {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 36rpx;
  text-align: right;
  font-size: 22rpx;
}
.order-detail-warp .food-list .food .right .price-num .food-price-warp {
  padding-top: 10rpx;
}
.order-detail-warp .food-list .food .right .price-num .food-price-warp .price {
  font-size: 36rpx;
}
.order-detail-warp .food-list .food .right .price-num .food-num-warp {
  margin-top: 20rpx;
}
.order-detail-warp .food-list .food .right .price-num .food-num-warp .num {
  font-size: 32rpx;
}
.order-detail-warp .fee-warp {
  padding-left: 48rpx;
}
.order-detail-warp .fee-warp view {
  margin-top: 40rpx;
  font-size: 22rpx;
}
.order-detail-warp .fee-warp view .fee-name {
  margin-right: 448rpx;
  font-size: 28rpx;
}
.order-detail-warp .fee-warp view .fee {
  font-size: 36rpx;
}
.order-detail-warp .fee-warp :last-child {
  padding-bottom: 28rpx;
}
.other {
  width: 700rpx;
  height: 208rpx;
  margin-top: 30rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  padding: 36rpx 48rpx 0;
  box-sizing: border-box;
  border-radius: 40rpx;
  box-shadow: 0px 0px 6px 0px #dcecf5;
  background-color: #ffffff;
  line-height: 40rpx;
}
.other .tableware-num {
  display: flex;
  padding-bottom: 28rpx;
  border-bottom: 2rpx solid #efefef;
}
.other .notes {
  display: flex;
  padding-top: 28rpx;
}
.other span {
  display: inline-block;
}
.other .common {
  width: 130rpx;
  font-size: 28rpx;
}
.other .tip {
  width: 216rpx;
  margin-left: 200rpx;
  margin-right: 20rpx;
  color: #c1c1c1;
  font-size: 24rpx;
  text-align: right;
  font-family: PingFangSC-regular;
}
.other .remarks {
  color: #000;
}
.other .tableware-picker {
  width: 100%;
  height: 100%;
}
.other .tableware-picker .selection {
  color: #000;
}
.confirm-order-btn {
  position: fixed;
  bottom: 100rpx;
  width: 228rpx;
  height: 68rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  background-color: #ff824e;
  border-radius: 20rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 68rpx;
}
