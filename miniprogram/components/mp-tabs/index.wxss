}
.weui-tabs .weui-tabs-bar__wrp {
  overflow: hidden;
  width: 100%;
  background: #fff;
  border: 0;
}
.weui-tabs .weui-tabs-bar__wrp .weui-tabs-bar__content {
  width: 100%;
  white-space: nowrap;
}
